# Configuration de l'application BazarKELY
VITE_APP_NAME=BazarKELY
VITE_APP_VERSION=0.0.1-alpha
VITE_APP_DESCRIPTION=Gestion budget familial - Madagascar

# URLs de l'API
VITE_APP_API_URL=http://localhost:3001/api
VITE_APP_BASE_URL=http://localhost:3000

# Configuration PWA
VITE_APP_PWA_NAME=BazarKELY
VITE_APP_PWA_SHORT_NAME=BazarKELY
VITE_APP_PWA_DESCRIPTION=Gestion budget familial - Madagascar
VITE_APP_PWA_THEME_COLOR=#3b82f6
VITE_APP_PWA_BACKGROUND_COLOR=#ffffff

# Configuration de l'environnement
VITE_APP_ENVIRONMENT=development
VITE_APP_DEBUG=true

# Configuration de la base de données locale
VITE_APP_DB_NAME=BazarKELYDB
VITE_APP_DB_VERSION=1

# Configuration de la synchronisation
VITE_APP_SYNC_INTERVAL=30000
VITE_APP_SYNC_RETRY_ATTEMPTS=3
VITE_APP_SYNC_RETRY_DELAY=5000

# Configuration des notifications
VITE_APP_NOTIFICATIONS_ENABLED=true
VITE_APP_NOTIFICATIONS_BUDGET_ALERTS=true
VITE_APP_NOTIFICATIONS_GOAL_REMINDERS=true

# Configuration de la gamification
VITE_APP_GAMIFICATION_ENABLED=true
VITE_APP_QUIZ_MAX_PER_DAY=1
VITE_APP_QUIZ_UNLOCK_DELAY=86400000

# Configuration des langues
VITE_APP_DEFAULT_LANGUAGE=fr
VITE_APP_SUPPORTED_LANGUAGES=fr,mg

# Configuration des devises
VITE_APP_DEFAULT_CURRENCY=MGA
VITE_APP_CURRENCY_SYMBOL=Ar

# Configuration des thèmes
VITE_APP_DEFAULT_THEME=system
VITE_APP_SUPPORTED_THEMES=light,dark,system

# Configuration de la sécurité
VITE_APP_ENCRYPTION_ENABLED=true
VITE_APP_DATA_RETENTION_DAYS=365

# Configuration des limites
VITE_APP_MAX_ACCOUNTS=10
VITE_APP_MAX_GOALS=15
VITE_APP_MAX_BUDGETS_PER_MONTH=20
VITE_APP_MAX_TRANSACTIONS_PER_PAGE=50

# Configuration des tests
VITE_APP_TEST_MODE=false
VITE_APP_MOCK_DATA=false
